<config>

    <modules>
        <Danjulf_TinyDomesticator>
            <version>0.1.0</version>
        </Danjulf_TinyDomesticator>
    </modules>

    <global>
        <blocks>
            <tinydomesticator>
                <class>Danjulf_TinyDomesticator_Block</class>
            </tinydomesticator>
        </blocks>
        <models>
            <tinydomesticator>
                <class>Danjulf_TinyDomesticator_Model</class>
            </tinydomesticator>
        </models>
        <helpers>
            <tinydomesticator>
                <class>Danjulf_TinyDomesticator_Helper</class>
            </tinydomesticator>
        </helpers>
    </global>

    <adminhtml>
        <layout>
            <updates>
                <tinydomesticator>
                    <file>tinydomesticator.xml</file>
                </tinydomesticator>
            </updates>
        </layout>
    </adminhtml>

